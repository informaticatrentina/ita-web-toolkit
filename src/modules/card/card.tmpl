    <div class="Card {{ modifier }} u-color-grey-30">
      <div class="Card-image">
        <img src="//placehold.it/400x220" class="u-sizeFull" alt="{{ __WORDS__[2] }}" />
      </div>
      <div class="Card-content u-padding-r-all">
        <p class="Card-extra"><a class="Card-extraLink" href="">{{ __WORDS__[1] }}</a></p>
        <h3 class="Card-title"><a class="Card-titleLink" href="">{{ __SHORT_TEXTS__[1] }}</a></h3>
        <p class="Card-text">{{ __TEXTS__[1] }}</p>
      </div>
    </div>
  </div>
</section>
